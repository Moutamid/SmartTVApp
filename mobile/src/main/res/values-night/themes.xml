<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--  Primary brand color.  -->
        <item name="colorPrimary">@color/dark_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!--  Secondary brand color.  -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="cardBackgroundColor">@color/dark_500</item>
        <item name="color">@color/white</item>
        <!--  Status bar color.  -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="materialDrawerStyle">@style/Theme.Mobile.Drawer</item>
        <item name="materialDrawerHeaderStyle">@style/Widget.MaterialDrawerHeaderStyle</item>
        <item name="android:textViewStyle">@style/TextRegular</item>
        <item name="android:buttonStyle">@style/ButtonRegular</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_round_close_24</item>
    </style>


    <style name="ButtonRegular" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextRegular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextLight" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextMedium" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins</item>
    </style>

